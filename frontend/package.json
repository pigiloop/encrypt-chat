{
  "name": "encrypt-chat-frontend",
  "version": "1.0.0-SNAPSHOT",
  "description": "encrypt-chat-frontend",
  "main": "src/index.html",
  "scripts": {
    "start": "http-server dist -p 3000 -c-1 --cors",
    "build": "npm run clean && npm run copy",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy": "npm run copy:html && npm run copy:css && npm run copy:js && npm run copy:assets",
    "copy:html": "cp src/index.html dist/",
    "copy:css": "mkdir -p dist/css && cp -r src/css/* dist/css/",
    "copy:js": "mkdir -p dist/js && cp -r src/js/* dist/js/",
    "copy:assets": "[ -d src/assets ] && mkdir -p dist/assets && cp -r src/assets/* dist/assets/ || true",
    "lint": "echo 'ESLint не настроен. Добавьте eslint для проверки кода.'",
    "dev": "npm start",
    "serve": "http-server dist -p 3000"
  },
  "keywords": [
    "frontend",
    "user-management",
    "vanilla-javascript",
    "crud"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}